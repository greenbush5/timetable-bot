{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"strict": true,
		"outDir": "build",
		"sourceMap": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",

		"baseUrl": ".",
		"paths": {
			"@interfaces": ["./src/interfaces/index"],
			"@interfaces/*": ["./src/interfaces/*"],
			"@models": ["./src/models/index"],
			"@models/*": ["./src/models/*"],
			"@config": ["./src/config"],
			"@secrets": ["./src/secrets"],
			"@data": ["./src/data"]
		}
	},

	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}