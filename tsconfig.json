{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"strict": true,
		"outDir": "build",
		"sourceMap": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",

		"baseUrl": ".",
		"paths": {
			"@client": ["./src/client/index"],
			"@functions": ["./src/client/functions"],
			// "@sharedtypes": ["./src/client/sharedTypes"],
			"@interfaces": ["./src/interfaces/index"],
			"@interfaces/*": ["./src/interfaces/*"],
			"@config": ["./src/config"]
		}
	},

	"ts-node": {
		"swc": false,
		"require": ["tsconfig-paths/register"]
	}
}